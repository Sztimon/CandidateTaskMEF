@model DataModel.Models.UserData
@{
    ViewBag.Title = "Candidate Task";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Fill in your basic information:</h2>

@using (Html.BeginForm("AddUserData", "UserData"))
{
    <div class="form-user-data">
        @Html.LabelFor(m => m.Name):
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required" })
        @Html.LabelFor(m => m.Surname):
        @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", required = "required" })
        @Html.LabelFor(m => m.Adress):
        @Html.TextBoxFor(m => m.Adress, new { @class = "form-control", required = "required" })
        @Html.LabelFor(m => m.PostCode):
        @Html.TextBoxFor(m => m.PostCode, new { @class = "form-control postcode", @minlength = "6", @maxlength = "6", @type = "text", @pattern = @"^\d{2}(?:[-\s]\d{3})?$", oninvalid = "setCustomValidity('XX-XXX')", required = "required", oninput = "setCustomValidity('')" })
        @Html.ValidationMessageFor(m => m, null, new { @class = "help-inline" })
    </div>
    <div style="margin-top:20px;"><button type="submit" class="btn btn-primary">Save</button></div>
}

@using (Html.BeginForm("SaveUserData", "UserData"))
{
    <div style="margin-top:20px;"><button type="submit" class="btn btn-primary">Log to DB</button></div>
}

